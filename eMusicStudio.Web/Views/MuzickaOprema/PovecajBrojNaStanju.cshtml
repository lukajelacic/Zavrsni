@model eMusicStudio.Web.ViewModels.MuzickaOprema.NumberInStockViewModel
@{
    ViewData["Title"] = "Povecaj broj na stanju";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <form asp-action="PovecajBrojNaStanju" method="post">
                <input asp-for="@Model.MuzickaOpremaId" hidden />
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Naziv"></label>
                        <input asp-for="Naziv" class="form-control" id="exampleInputEmail1" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="NaStanju"></label>
                        <input asp-for="NaStanju" class="form-control" id="exampleInputEmail1" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kolicina"></label>
                        <input asp-for="Kolicina" class="form-control" id="exampleInputEmail1" placeholder="Unesite količinu">
                        <span asp-validation-for="@Model.Kolicina" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Dodaj</button>
                </div>
            </form>
        </div>
    </div>
    </div>