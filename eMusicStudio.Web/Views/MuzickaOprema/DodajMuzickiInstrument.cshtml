@model eMusicStudio.Web.ViewModels.MuzickaOprema.AddNewMusicInstrumentViewModel
@{
    ViewData["Title"] = "Dodaj muzicki instrument";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <form asp-action="DodajMuzickiInstrument" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Naziv"></label>
                        <input asp-for="Naziv" class="form-control" id="exampleInputEmail1" placeholder="Unesite naziv">
                        <span asp-validation-for="@Model.Naziv" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Cijena"></label>
                        <input asp-for="Cijena" class="form-control" id="exampleInputEmail1" placeholder="Unesite cijenu">
                        <span asp-validation-for="@Model.Cijena" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="NaStanju"></label>
                        <input asp-for="NaStanju" class="form-control" id="exampleInputEmail1" placeholder="Unesite broj na stanju">
                        <span asp-validation-for="@Model.NaStanju" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Vrste"></label>
                        <select asp-for="@Model.VrstaId" asp-items="@Model.Vrste" class="form-control"></select>
                        <span asp-validation-for="@Model.VrstaId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Slika</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input asp-for="Slika" class="custom-file-input" id="exampleInputFile">
                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="ListaInstrumenata" class="btn btn-default">Nazad</a>
                    <button type="submit" class="btn btn-primary float-right">Dodaj</button>
                </div>
            </form>
        </div>
    </div>
    </div>