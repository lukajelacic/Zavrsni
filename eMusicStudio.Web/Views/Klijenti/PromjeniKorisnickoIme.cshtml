@model eMusicStudio.Web.ViewModels.Klijent.ClientChangeUsernameViewModel
@{
    ViewData["Title"] = "Promjeni korisnicko ime";
    Layout = "~/Views/Shared/_KlijentLayout.cshtml";

}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <form asp-action="PromjeniKorisnickoIme" method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="@Model.KorisnickoIme"></label>
                        <input asp-for="@Model.KorisnickoIme" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.NovoKorisnickoIme"></label>
                        <input asp-for="@Model.NovoKorisnickoIme" class="form-control" />
                        <span asp-validation-for="@Model.NovoKorisnickoIme" class="text-danger"></span>
                    </div>
                    <br />
                    <a asp-action="ProfilKlijenta" class="btn btn-default">Nazad na profil</a>
                    <button type="submit" class="btn btn-primary float-right">Promjeni korisnicko ime</button>
                </div>
                    
            </form>
        </div>
    </div>
    </div>

