@model eMusicStudio.Web.ViewModels.Klijent.ClientChangeEmailViewModel
@{
    ViewData["Title"] = "Promjeni email";
    Layout = "~/Views/Shared/_KlijentLayout.cshtml";

}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <form asp-action="PromjeniEmail" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="@Model.TrenutniEmail"></label>
                        <input asp-for="@Model.TrenutniEmail" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.NoviEmail"></label>
                        <input asp-for="@Model.NoviEmail" class="form-control" />
                        <span asp-validation-for="@Model.NoviEmail" class="text-danger"></span>
                    </div>
                    <a asp-action="ProfilKlijenta" class="btn btn-default">Nazad na profil</a>
                    <button type="submit" class="btn btn-primary float-right">Promjeni email</button>
                </div>
            </form>
        </div>
    </div>
    </div>